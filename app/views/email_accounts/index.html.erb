<%= link_to 'Send Email', compose_email_path, class: 'btn btn-primary' %>

<%= link_to 'Logout', logout_path, method: :delete %>


<h1>Emails</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th>From</th>
      <th>Created At</th>
    </tr>
  </thead>
  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.subject %></td>
        <td><%= email.body %></td>
        <td><%# email.from %></td>
        <td><%= email.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>